extends layout

block content
    .max-w-4xl.mx-auto.p-6
        h1.text-2xl.font-bold.mb-6 Unknown Face Clusters

        if clusters.length === 0
            p.text-gray-500 No clusters found.

        .grid(class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6")
          each c in clusters
              .border.rounded-lg.shadow.p-4.bg-white
                  if c.sample_face
                      img.w-full.rounded.mb-3(
                          src=`data:image/jpeg;base64,${c.sample_face}`
                      )

                  p.text-sm.text-gray-600.mb-2
                      | Faces in cluster: #{c.face_count}

                  form(method="POST", action=`/clusters/${c.id}/promote`)
                      input(type="text", name="name", placeholder="Enter name"
                          class="w-full border rounded px-2 py-1 mb-2"
                          required)

                      button(type="submit", class="bg-blue-600 text-white px-3 py-1 rounded hover:bg-blue-700")
                          | Promote to Person