extends layout

block content
    .max-w.mx-auto.p-6
        h1(class="text-2xl font-bold mb-6") People

        if people.length === 0
            p(class="text-gray-500") No people found.

        .grid(class="grid grid-cols-6 sm:grid-cols-6 md:grid-cols-6 gap-6")
          each p in people
              a(href=`/people/${p.id}`, class="block border rounded-lg shadow bg-white p-3 hover:shadow-md transition")
                  if p.thumb_base64
                      img(src=`data:image/jpeg;base64,${p.thumb_base64}`, alt=p.name, class="w-full h-40 object-cover rounded mb-2")
                  else
                      div(class="w-full h-32 bg-gray-200 rounded mb-2 flex items-center justify-center text-gray-500 text-sm") No photo
                  h2(class="text-lg font-semibold mb-1") #{p.name}
                  p(class="text-xs text-gray-500") ID #{p.id}