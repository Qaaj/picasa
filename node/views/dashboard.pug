extends layout
include components/photo-card

block content
  // HEADER
  .p-6.bg-white.shadow.mb-6
    h1.text-2xl.font-semibold Photo Dashboard
    p.text-gray-500 #{photos.length} photos on this page

  // GRID
  .w-full.px-4
    .grid(class="grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4")
      each p in photos
        +photoCard(p)
  // PAGINATION
  if totalPages > 1
    .flex.justify-center.gap-4.mt-8.mb-12
      if page > 1
        a(href=`/dashboard?page=${page-1}` class="px-4 py-2 bg-gray-300 rounded") ← Prev

      span.text-gray-600 Page #{page} / #{totalPages}

      if page < totalPages
        a(href=`/dashboard?page=${page+1}` class="px-4 py-2 bg-gray-300 rounded") Next →
