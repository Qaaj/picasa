doctype html
html
  head
    title Photo Dashboard
    meta(charset="utf-8")
    script(src="https://cdn.tailwindcss.com")

  body(class="bg-gray-100 min-h-screen")

    // HEADER
    div(class="p-6 bg-white shadow mb-6")
      h1(class="text-2xl font-semibold") Photo Dashboard
      p(class="text-gray-500") #{photos.length} photos on this page

    // GRID
    div(class="max-w-7xl mx-auto px-4")
      div(class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4")
        each p in photos
          a(
            class="block bg-white shadow rounded-lg overflow-hidden hover:shadow-lg transition"
            href=`/photo/${p.id}`
          )
            img(class="w-full h-40 object-cover" src=p.thumb_base64 alt=p.file_name)
            div(class="p-2 text-sm text-gray-700 truncate") #{p.file_name}

    // PAGINATION
    if totalPages > 1
      div(class="flex justify-center gap-4 mt-8 mb-12")
        if page > 1
          a(class="px-4 py-2 bg-gray-300 rounded" href=`/dashboard?page=${page-1}`) ← Prev

        span(class="text-gray-600") Page #{page} / #{totalPages}

        if page < totalPages
          a(class="px-4 py-2 bg-gray-300 rounded" href=`/dashboard?page=${page+1}`) Next →
